{
  "name": "animate-chat",
  "version": "0.0.1",
  "description": "Chat en tiempo real",
  "author": "Juan Carlos Serrano <juancsch@gmail.com>",
  "license": "MIT",
  "main": "server/start",
  "engines": {
    "node": "12.18.0"
  },
  "scripts": {
    "build-client": "webpack --progress --colors",
    "start": "npm run build-client && npm run compile && PORT=8080 node server/start.js &",
    "stop": "kill $(lsof -t -i:8080)",
    "pretest": "npm start --silent &",
    "test": "sleep 10 && chimp --browser=phantomjs --mocha --path=test-integration",
    "posttest": "npm stop",
    "utest": "jest --verbose",
    "tdd": "npm run utest -- --watch",
    "heroku-postbuild": "npm run build-client",
    "lint:client": "eslint --fix ./public",
    "lint:server": "tslint --fix ./src/server",
    "server:dev": "tsnd --respawn src/start.ts",
    "compile": "npm run clean && npm i && tsc -p .",
    "clean": "rm -rf server"
  },
  "dependencies": {
    "async": "^2.0.1",
    "body-parser": "^1.15.2",
    "concat-stream": "^1.5.1",
    "data-uri-to-buffer": "0.0.4",
    "domify": "^1.4.0",
    "express": "^4.14.0",
    "handlebars": "^4.0.5",
    "handlebars-loader": "^1.3.0",
    "level": "^6.0.1",
    "level-ttl": "^3.1.1",
    "socket.io": "2.1.1",
    "socket.io-client": "2.1.1",
    "uuid": "^2.0.2",
    "webrtc2images": "^1.4.4"
  },
  "devDependencies": {
    "@types/concat-stream": "1.6.0",
    "@types/jest": "26.0.10",
    "@types/levelup": "4.3.0",
    "@types/level-ttl": "3.1.0",
    "@types/node": "14.6.0",
    "@types/uuid": "8.3.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jsdoc": "29.1.3",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "jest-extended": "0.11.5",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "standard": "14.3.4",
    "ts-jest": "26.2.0",
    "ts-node-dev": "1.0.0-pre.58",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "9.0.0",
    "tslint-plugin-prettier": "2.3.0",
    "typescript": "3.9.7",
    "webdriverio": "6.4.0",
    "webpack": "3.10.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm t",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json}": [
      "prettier --write"
    ]
  }
}
