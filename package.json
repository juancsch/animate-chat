{
  "name": "animate-chat",
  "version": "1.0.0",
  "description": "Real time chat with gifs",
  "author": "Juan Carlos Serrano <juancsch@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "12.18.0"
  },
  "scripts": {
    "postinstall": "run-p install:frontend install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "start": "run-s build:frontend start:backend",
    "build:frontend": "npm run build --prefix frontend",
    "start:backend": "npm start --prefix backend",
    "test": "run-s test:frontend test:backend",
    "test:frontend": "npm test --prefix frontend",
    "test:backend": "npm test --prefix backend",
    "lint:fix": "run-p lint:fix:frontend lint:fix:backend",
    "lint:fix:frontend": "npm run lint --prefix frontend",
    "lint:fix:backend": "npm run lint --prefix backend",
    "heroku:postbuild": "npm run build"
  },
  "devDependencies": {
    "husky": "4.2.5",
    "npm-run-all": "4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  }
}
