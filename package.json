{
  "name": "animate-chat",
  "version": "0.0.1",
  "description": "Chat en tiempo real",
  "author": "Juan Carlos Serrano <juancsch@gmail.com>",
  "license": "MIT",
  "main": "server/start",
  "engines": {
    "node": "8.11.3"
  },
  "scripts": {
    "build-client": "webpack --progress --colors",
    "start": "npm run build-client && PORT=8080 node server/start.js &",
    "stop": "kill $(lsof -t -i:8080)",
    "pretest": "npm start --silent &",
    "test": "sleep 10 && chimp --browser=phantomjs --mocha --path=test-integration",
    "posttest": "npm stop",
    "utest": "mocha --recursive test",
    "tdd": "npm run utest -- --watch",
    "heroku-postbuild": "npm run build-client"
  },
  "dependencies": {
    "async": "^2.0.1",
    "body-parser": "^1.15.2",
    "concat-stream": "^1.5.1",
    "data-uri-to-buffer": "0.0.4",
    "domify": "^1.4.0",
    "express": "^4.14.0",
    "handlebars": "^4.0.5",
    "handlebars-loader": "^1.3.0",
    "level": "^1.4.0",
    "level-ttl": "^3.1.0",
    "rxjs": "6.2.0",
    "socket.io": "2.1.1",
    "socket.io-client": "2.1.1",
    "uuid": "^2.0.2",
    "webrtc2images": "^1.4.4"
  },
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-loader": "7.1.4",
    "babel-preset-es2015": "6.24.1",
    "chimp": "0.51.1",
    "standard": "11.0.1",
    "webpack": "3.10.0"
  }
}
