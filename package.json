{
  "name": "node-chat",
  "version": "0.0.1",
  "description": "Chat en tiempo real",
  "author": "Juan Carlos Serrano <juancsch@gmail.com>",
  "license": "MIT",
  "main": "server.js",
  "scripts": {
    "build-client": "webpack --progress --colors",
    "prestart": "npm i",
    "start": "npm run build-client && PORT=8080 node server/app.js",
    "stop": "kill $(lsof -t -i:8080)",
    "pretest": "npm start --silent &",
    "test": "sleep 10 && chimp --mocha --path=test",
    "posttest": "npm stop",
    "test-watch": "chimp --mocha --path=test --watch"
  },
  "dependencies": {
    "async": "^2.0.1",
    "body-parser": "^1.15.2",
    "concat-stream": "^1.5.1",
    "data-uri-to-buffer": "0.0.4",
    "domify": "^1.4.0",
    "express": "^4.14.0",
    "handlebars": "^4.0.5",
    "level": "^1.4.0",
    "level-ttl": "^3.1.0",
    "socket.io": "^1.4.8",
    "socket.io-client": "^1.4.8",
    "uuid": "^2.0.2",
    "webrtc2images": "^1.4.4"
  },
  "devDependencies": {
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.13.2",
    "chimp": "^0.40.4",
    "handlebars-loader": "^1.3.0",
    "webpack": "^1.13.1"
  }
}
