{
  "name": "animate-chat-backend",
  "version": "0.0.2",
  "description": "Real time chat with gifs",
  "author": "Juan Carlos Serrano <juancsch@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "12.18.0"
  },
  "scripts": {
    "start": "npm run compile && PORT=8080 node server/start.js",
    "stop": "kill $(lsof -t -i:8080)",
    "compile": "rm -rf server && tsc -p .",
    "lint": "tslint src/**/*.ts test/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "pretest:acceptance": "npm run start --silent &",
    "test:acceptance": "sleep 5 && jest --runTestsByPath test/acceptance/* --detectOpenHandles",
    "posttest:acceptance": "npm stop",
    "test:integration": "jest --runTestsByPath ./test/integration/*",
    "test:unit": "jest --runTestsByPath ./test/unit/*",
    "test": "npm run test:unit && npm run test:integration && npm run test:acceptance",
    "tdd": "npm run test:unit -- --watch"
  },
  "dependencies": {
    "async": "^2.0.1",
    "body-parser": "1.19.0",
    "concat-stream": "2.0.0",
    "data-uri-to-buffer": "^0.0.4",
    "express": "4.17.1",
    "level": "6.0.1",
    "level-ttl": "3.1.1",
    "socket.io": "2.3.0",
    "uuid": "^2.0.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/concat-stream": "^1.6.0",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.10",
    "@types/level-ttl": "^3.1.0",
    "@types/levelup": "^4.3.0",
    "@types/node": "^14.6.0",
    "@types/socket.io": "^2.1.11",
    "@types/socket.io-client": "^1.4.33",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "axios": "0.20.0",
    "jest": "26.4.2",
    "jest-extended": "0.11.5",
    "socket.io-client": "2.3.0",
    "standard": "14.3.4",
    "supertest": "4.0.2",
    "ts-jest": "26.2.0",
    "ts-node": "9.0.0",
    "tslint": "6.1.3",
    "tslint-config-standard": "9.0.0",
    "typescript": "3.9.7"
  }
}
